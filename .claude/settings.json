{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "outputStyle": "Centaur",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE_PATH=$(jq -r '.tool_input.file_path') && if [[ \"$FILE_PATH\" == *.md ]]; then prettier --write \"$FILE_PATH\"; fi"
          }
        ]
      }
    ]
  }
}